{
  "name": "kyros-api",
  "version": "1.0.0",
  "main": "/src/index.js",
  "license": "MIT",
  "scripts": {
    "build": "npm run clean && babel ./src --out-dir dist",
    "start": "node ./dist/index.js",
    "clean": "rm -rf ./dist && mkdir dist",
    "dev": "nodemon -L --exec babel-node ./src/index.js",
    "precommit": "lint-staged",
    "lint": "eslint -c .eslintrc src",
    "test": "NODE_ENV=test API_PORT=3333 node --expose-internals ./node_modules/.bin/mocha --require babel-core/register --recursive ./src/**/*.spec.js --exit",
    "test:watch": "nodemon -w . -d 0 --exec npm test"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^10.1.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "eslint": "^7.3.1",
    "eslint-config-standard": "^14.1.1",
    "mocha": "^8.0.1",
    "standard": "^14.3.4",
    "supertest": "^4.0.2"
  },
  "dependencies": {
    "bcrypt-nodejs": "^0.0.3",
    "is-master": "^1.2.2",
    "jsonwebtoken": "^8.1.1",
    "lodash": "^4.17.5",
    "mongo": "^0.1.0",
    "mongoose": "^5.0.6",
    "nodemon": "^2.0.4",
    "qs": "^6.5.1",
    "restify": "^8.5.1",
    "restify-cookies": "^0.2.2",
    "restify-paginate": "^0.0.5"
  },
  "lint-staged": {
    "+(src|api)/**/*.js": [
      "eslint -c .eslintrc",
      "git add"
    ]
  }
}
